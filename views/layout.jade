doctype html
html
  head
    link(rel='stylesheet', href='/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
    link(rel='stylesheet', href='/css/fileinput.min.css')
    block css
    link(rel='stylesheet', href='/css/style.css')

  body(onload='parallax()')

    block header

    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Home
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            each f in frac
              li
                a(href='/' + f.title + '')= f.title
            li
              a(data-toggle="modal" data-target="#myModal")
                span.glyphicon.glyphicon-plus

    block content

    #myModal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        form(role='form' method='post' action='/add-frac' id='form1' enctype='multipart/form-data').form-horizontal
          .modal-content
            .modal-header
              //button.close(type='button', data-dismiss='modal') &times;
              h4.modal-title Add new fraction
            .modal-body
              .form-group.required
                label(for='title').col-sm-2.text-left Title
                .col-sm-10
                  input(type='text' name='title' id='title' required).form-control
              .form-group.required
                label(for='desc').col-sm-2.text-left Short description
                .col-sm-10
                  textarea(type='text' name='desc' id='desc' required).form-control
              .form-group
                label(for='img').col-sm-2.text-left City look
                .col-sm-10
                  input(type='file' name='img' id='img' accept="image/*").form-control.file-loading
            .modal-footer
              button(type='submit' name='submit').btn.btn-default Submit

    footer
      .row
        .col-lg-12.text-center
          p Copyright &copy; Katarzyna Bigaj 2015

    script(src='/bootstrap/js/jquery.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/js/fileinput.min.js')
    block js
    script(src='/js/script.js')