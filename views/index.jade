extends layout

block content
  .bg
  .jumbotron
    h1 Disciples II
    h2 Fractions - leaders - units - stats
  // Page Content
  nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Home
      // Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          each f in frac
            li
              a(href='/' + f.title + '')= f.title
          li
            a(href='/add-fraction')
              span.glyphicon.glyphicon-plus
      // /.navbar-collapse
    // /.container
  .container.fracList
    .page-header
      h1
        | Fractions&nbsp;
        small Click image to see details
      //  ------------
    each f in frac
      .row
        .col-lg-6.col-md-6
          a(href='/' + f.title + '').outerLink
            img.img-responsive(src='/images/start/' + f.city_img, onmouseout="this.style.opacity=0.6",
            onmouseover="this.style.opacity=1").darkableImage
        .col-lg-6.col-md-6
          h3= f.title
          p= f.description
      hr
    a(href='/add-fraction').btn.btn-primary.center-block
      span.glyphicon.glyphicon-plus
      | &nbsp;Add fraction
    //  ----------
    // Footer
    footer
      .row
        .col-lg-12.text-center
          p Copyright &copy; Your Website 2014
  // /.container